<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="application.controllers.GroupDetails"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="5" vgap="10" fx:id="rootPane">
             
    <Label text = "Groups" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.halignment="CENTER" fx:id="groupTitle" />
    
    <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="Most Active Members" GridPane.halignment="CENTER" />
    <ComboBox GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="CENTER" MaxWidth="200" fx:id="selectActive"/>
    <Button GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="CENTER" MaxWidth="200" text="Select" onAction="#getActiveNum" />
    <Label GridPane.rowIndex="4" GridPane.columnIndex="0" fx:id="mostActiveMembers" />
    <Label GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.halignment="CENTER" fx:id="actionLabel" />
    
    <Label GridPane.rowIndex="1" GridPane.columnIndex="1" text="All Members" GridPane.halignment="CENTER" />
    <ComboBox GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="selectMembers" />
    <Button GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="CENTER" MaxWidth="200" text="Read More" onAction="#readMore" />
    
    <Label GridPane.rowIndex="1" GridPane.columnIndex="2" text="Recent Posts" GridPane.halignment="CENTER" />
    <Button GridPane.rowIndex="2" GridPane.columnIndex="2" GridPane.halignment="CENTER" MaxWidth="200" text="Read Posts" onAction="#moreQuestions" />
    
    <Button GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="CENTER" MaxWidth="200" text="Finish" onAction="#complete" />
    
</GridPane>