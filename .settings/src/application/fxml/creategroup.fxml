<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="application.controllers.CreateGroup"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" fx:id="rootPane">
    
    <Label text = "New Group" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="CENTER" fx:id="sceneTitle"/>
   	<Label text = "Title" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER" />
   	<TextField GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="CENTER" fx:id="title" />
   	<Label text = "Description" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="CENTER" />
   	<TextField GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="CENTER" fx:id="description" />
    <Button GridPane.rowIndex="5" GridPane.columnIndex="2" text="Submit and Join Group" onAction="#submit" />
     <Label GridPane.rowIndex="6" GridPane.halignment="CENTER" fx:id="actionLabel" />
</GridPane>