<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="application.controllers.GroupList"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="5" vgap="10" fx:id="rootPane">
             
    <Label text = "Groups" GridPane.rowIndex="0" GridPane.columnIndex="3" GridPane.halignment="CENTER" />
    
    <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="Most Active Groups" GridPane.halignment="CENTER" />
    <ComboBox GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="CENTER" MaxWidth="200" fx:id="selectActive"/>
    <Button GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="CENTER" MaxWidth="200" text="Select" onAction="#getActiveNum" />
    <Label GridPane.rowIndex="4" GridPane.columnIndex="0" fx:id="mostActiveGroups" />
    

    <Label GridPane.rowIndex="1" GridPane.columnIndex="2" text="Most Popular Groups" GridPane.halignment="CENTER" />
    <ComboBox GridPane.rowIndex="2" GridPane.columnIndex="2" GridPane.halignment="CENTER" MaxWidth="200" fx:id="selectPopular"/>
    <Button GridPane.rowIndex="3" GridPane.columnIndex="2" GridPane.halignment="CENTER" MaxWidth="200" text="Select" onAction="#getPopularNum" />
    <Label GridPane.rowIndex="4" GridPane.columnIndex="2" fx:id="mostPopularGroups" />
    
    
    <Label GridPane.rowIndex="1" GridPane.columnIndex="4" text="All Groups" GridPane.halignment="CENTER" />
    <ComboBox GridPane.rowIndex="2" GridPane.columnIndex="4" GridPane.halignment="CENTER" MaxWidth="200" fx:id="selectGroup"/>
    <Button GridPane.rowIndex="3" GridPane.columnIndex="4" GridPane.halignment="CENTER" MaxWidth="200" text="Join Group" onAction="#joinGroup" />
    <Button GridPane.rowIndex="4" GridPane.columnIndex="4" GridPane.halignment="CENTER" MaxWidth="200" text="Read More" onAction="#readMore" />
    
    <Label GridPane.rowIndex="6" GridPane.columnIndex="2" GridPane.halignment="CENTER" fx:id="actionLabel" />
     <Button GridPane.rowIndex="7" GridPane.columnIndex="4" GridPane.halignment="CENTER" MaxWidth="200" text="Finish" onAction="#complete" />
    
</GridPane>