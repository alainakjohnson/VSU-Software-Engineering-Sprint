<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="application.classes.Register"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" fx:id="rootPane">
    
    <Label text = "New User" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="CENTER" fx:id="sceneTitle"/>
   	<Label text = "First Name" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER" />
   	<TextField GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="CENTER" fx:id="firstname" />
   	<Label text = "Last Name" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="CENTER" />
   	<TextField GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="CENTER" fx:id="lastname" />
   	<Label text = "Email Address" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="CENTER" />
   	<TextField GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="CENTER" fx:id="email" />
   	<Label text = "Screenname" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="CENTER" />
   	<TextField GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="CENTER" fx:id="screenname" />
    <Button GridPane.rowIndex="5" GridPane.columnIndex="2" MaxWidth="200" text="Submit" onAction="#submit" />
     <Label GridPane.rowIndex="6" GridPane.halignment="CENTER" fx:id="actionLabel" />
</GridPane>